<article class="product">
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url, alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end %>
  <div class="button">
    <% if product.quantity.zero? %>
      <%= button_to 'Sold Out', '#', class: 'button soldout', disabled: true %>
    <% end %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn add-btn', method: :post, disabled: product.quantity.zero? do %>
      <% if product.quantity.zero? %>
        <%= fa_icon "shopping-cart", text: 'Add', disabled: true %>
      <% else %>
        <%= fa_icon "shopping-cart", text: 'Add' %>
      <% end %>
    <% end %>
  </div>
</article>
